<h1>Recipients#new</h1>
<p>Find me in app/views/recipients/new.html.erb</p>

<h1>Add a new recipient</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@recipient) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form_control' %>
  
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form_control' %>
	  
      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form_control' %>

      <%= f.submit "Add a recipient", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>