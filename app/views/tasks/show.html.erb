<h1>Task #show</h1>
<p>Button for Sending texts via app/views/tasks/show.html.erb</p>

<ul class="tasks">
    <div>
        <%= @task.activity %>
        </br>
        <%= @task.message %>
        </br>
        <%= @task.schedule_time %>
        </br>

        <h3>Being notified via SMS about your goal</h3>

        <% @task.recipients.each do |recipient| %>
          <%= recipient.name %>
          </br>
        <% end %>
    </div>
        

    </br>
    </br>
      <!-- IF task is already running, only show a cancel button (results in failure SMS notification) -->
        <%= render 'end_task_form' %>
      <!-- ELSE show button below to start task -->
        <%= render 'start_task_form' %>
</ul>