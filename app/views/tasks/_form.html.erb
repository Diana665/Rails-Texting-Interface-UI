<%= form_for @task do |f| %>

  <div class="field">
    <p>
      <%= f.label :activity %>
      <%= f.text_field :activity, label: 'Activity' %><br />
    </p>
  </div>

  <div class="field">
    <p>
      <%= f.label :message %>
      <%= f.text_field :message %><br />
    </p>
  </div>

  <div class="field">
    <br />
    <p>
      <%= f.label :schedule_time, "Schedule Text Delivery Date" %>:
      <%= f.date_select :schedule_time %><br />

      <%= f.label :schedule_time, "Schedule Text Delivery Time" %>:
      <%= f.time_select :schedule_time %><br />
    </p>
  </div>

  <div class="field">
    <br />
     <p>Recipient List:</p>
     <%= f.fields_for :recipients do |field| %>
      <p>
        <%= field.collection_check_boxes(:recipient_id, Recipient.joins(:ownerships).where(user_id = current_user.id), :id, :name) %>
      </p>
    <% end %>
  </div>

  <div class="actions">
    <br />
    <p>
      <%= f.submit "Submit" %>
    </p>
  </div>

<% end %>