<%= form_for @task do |f| %>

  <%= error %>

  <div class="field">
    <p>
      <%= f.label :activity %>
      <%= f.text_field :activity, label: 'Activity' %><br />
    </p>
  </div>

  <div class="field">
    <p>
      <%= f.label :message %>
      <%= f.text_field :message %><br />
    </p>
  </div>

  <div class="field">
    <br />
    <p>
      <%= f.label :schedule_time, "Schedule Text Delivery Date" %>:
      <%= f.date_select :schedule_time %><br />

      <%= f.label :schedule_time, "Schedule Text Delivery Time" %>:
      <%= f.time_select :schedule_time %><br />
    </p>
  </div>

  <div class="recipient-fields">
    
    <p>Recipient List:</p>
    
    <p>
      <%= f.collection_check_boxes(:recipient_ids, current_user.recipients, :id, :name) %>
      <!-- It's posting to Recipients, but should be to Ownerships -->
    </p>
  </div>

  <div class="form-actions">
    <br />
    <p>
      <%= f.submit "Submit" %>
      <% link_to 'Cancel', users_show_path %>
    </p>
  </div>

<% end %>