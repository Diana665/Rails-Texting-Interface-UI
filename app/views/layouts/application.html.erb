<!DOCTYPE html>
<html>
<head>
  <title>Texting</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-default navbar-static-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Sample Rails Texting App", root_path, :class => "brand" %>
				<div class='session-controls'>
					<% if current_user %>
						<%= link_to "Log Out", logout_path, :class => 'btn btn-danger btn-mini' %>						Logged in as <%= current_user.email %>.
					<% else %>
						<div class="btn-group">
							<%= link_to "Sign Up", signup_path, :class => "btn btn-mini" %>
							<%= link_to "Log In", login_path, :class => "btn btn-mini" %>
						</div>
					<% end %> 
				</div>
			</div>
		</div>
	</div>

	
<div class="row">
	<div class="span4">
		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, id: "flash_#{name}" %>
		<% end %>
	</div>
</div>

<%= yield %>

</body>
</html>
